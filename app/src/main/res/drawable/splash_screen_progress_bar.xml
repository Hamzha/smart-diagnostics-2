<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/progress"
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="100dp" />
                <gradient
                    android:angle="0"
                    android:centerY="1.0"
                    android:endColor="@color/colorLogoLight"
                    android:startColor="@color/colorLogoDark" />
            </shape>
        </scale>

    </item>
</layer-list>